doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Homepage
  //JAVASCRIPT 
  script(src = "/js/home.js" type = 'module')
  script(src = "/js/navbar.js" type = 'module')
  // STYLESHEETS
  link(rel='stylesheet' href='/css/general.css')
  link(rel='stylesheet' href='/css/headers.css')
  link(rel='stylesheet' href='/css/buttons.css')
  link(rel='stylesheet' href='/css/navbar.css')
  link(rel='stylesheet' href='/css/home.css')
  link(rel='stylesheet' href='/css/modal.css')
  link(rel='stylesheet' href='/css/confirm-delete.css')
  // GOOGLE FONT FAMILY
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap' rel='stylesheet')
  // ION ICON INSTALLATION
  script(type='module' src='https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js')
  script(nomodule='' src='https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js')
  // FAVICON
  link(rel='icon' type='image/png' href='/img/static/logo.png')
section.posts
  include _post

  nav.nav
    .confirm-logout-container.hidden
      .backdrop.confirm-logout-backdrop
      .modal.confirm-logout
        p.modal__message
          | Are you sure you want to log out ?
        .modal__buttons
          button.btn.btn--red.btn--confirm Confirm
          button.btn.btn--black.btn--cancel Cancel
    .nav__left
      .nav__logo-container
        img.nav__logo(src='/img/static/logo.png')
      .nav__search-bar
        input.nav__search-bar-input(type='text' placeholder='Search')
        ion-icon.nav__search-bar-icon(name='search-outline')
    ul.nav__items
      li.nav__item.nav__item--active.nav__item--home
        ion-icon.nav__item-icon(name='home')
        p.nav__item-text Home
      li.nav__item.nav__item--profile
        ion-icon.nav__item-icon(name='person-outline')
        p.nav__item-text Profile
      li.nav__item.nav__item--jobs
        ion-icon.nav__item-icon(name='bag-outline')
        p.nav__item-text Jobs
      li.nav__item.nav__item--logout
        ion-icon.nav__item-icon(name='log-out-outline')
        p.nav__item-text Log out
  .feed__container
    .confirm-delete-container.hidden
      .backdrop.confirm-delete-backdrop
      .modal.confirm-delete
        p.confirm-delete__message
          | Are you sure you want to delete this post ?
        .confirm-delete__buttons
          button.btn.btn--red.btn--confirm Delete it !
          button.btn.btn--black.btn--cancel Cancel

    .post-form-container
      form.post-form
        .post-form__avatar-container
          img.post-form__avatar(src=`/img/users/avatars/${user.avatar}` alt='User avatar')
        .post-form__input-section
          .post-form__input-container
            textarea.post-form__input.postTextInput(placeholder="What's happening ?")
          .post-form__buttons
            label.btn.btn--red
              input.postImageInput(type='file' style='display: none')
              |                   Upload image
            button.btn.btn--blue.btn-create-new-post Create new post
    ul.posts__list
      each post in posts
        +post(post)
